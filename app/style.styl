@import 'nib'

global-reset()

@font-face 
  font-family 'Roboto'
  src url('fonts/roboto/Roboto-Regular.eot')
  src url('fonts/roboto/Roboto-Regular.eot?#iefix') format('embedded-opentype'),
      url('fonts/roboto/Roboto-Regular.woff') format('woff'),
      url('fonts/roboto/Roboto-Regular.ttf') format('truetype'),
      url('fonts/roboto/Roboto-Regular.svg#RobotoRegular') format('svg')
  font-weight normal
  font-style normal
@font-face 
  font-family 'Roboto Thin'
  src url('fonts/roboto/Roboto-Thin.eot')
  src url('fonts/roboto/Roboto-This.eot?#iefix') format('embedded-opentype'),
      url('fonts/roboto/Roboto-This.woff') format('woff'),
      url('fonts/roboto/Roboto-This.ttf') format('truetype'),
      url('fonts/roboto/Roboto-This.svg#RobotoThin') format('svg')
  font-weight normal
  font-style normal
  
.prev, .next
  cursor pointer
*::selection
  background #faba19

.section
  height 100vh

.container
  position relative
  margin 0 auto
  max-width 1440px
  clearfix()
.header, .footer 
  position fixed
  height 50px
  display none
  width 100%
  background #333
  z-index 9
  text-align center
  color #f2f2f2
  padding 20px 0 0 0

.header
  top 0px
  .container
    ul
      li
        display inline
#fullPage
  width 100%
.slide-1
