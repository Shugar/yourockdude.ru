  background-size cover
  .background
    z-index 1
    background rgba(32,23,19,.7)
    height 100%
    text-align center
    img
      position absolute
      transform translateX(-50%)
      left 50%
      top 15vh
      
    h1
      font-size 82px
      font-family 'Helvetica Neue', sans-serif
      letter-spacing 5px
      color #fff
      font-weight 100
      margin 0 auto
      width 960px
